<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:text="헬스 갤러리!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/RecommButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="144dp"
        android:text="운동 추천"
        app:layout_constraintBottom_toTopOf="@+id/ScheduleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/ScheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:text="일정 관리"
        app:layout_constraintBaseline_toBaselineOf="@+id/TimerButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/RoutineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:text="루틴 관리"
        app:layout_constraintBaseline_toBaselineOf="@+id/RecommButton"
        app:layout_constraintEnd_toStartOf="@+id/RecommButton" />

    <Button
        android:id="@+id/TimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="236dp"
        android:text="타이머"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ScheduleButton" />

    <Button
        android:id="@+id/ExerciseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="45dp"
        android:text="운동!"
        app:layout_constraintBottom_toTopOf="@+id/ScheduleButton"
        app:layout_constraintEnd_toEndOf="@+id/ScheduleButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ToggleButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/asr_button"
            android:enabled="false"

            />
        <ToggleButton
            android:id="@+id/htwd_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:enabled="false"

            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>